{
  "extends": "./node_modules/@polkadot/dev/config/tsconfig",
  "exclude": [
    "build/**/*",
    "**/build/*",
    "**/build/**/*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@polkadot/extension": ["packages/extension/src"],
      "@polkadot/extension/*": ["packages/extension/src/*"],
      "@polkadot/extension-chains": ["packages/extension-chains/src"],
      "@polkadot/extension-chains/*": ["packages/extension-chains/src/*"],
      "@polkadot/extension-dapp": ["packages/extension-dapp/src"],
      "@polkadot/extension-dapp/*": ["packages/extension-dapp/src/*"],
      "@polkadot/extension-inject": ["packages/extension-inject/src"],
      "@polkadot/extension-inject/*": ["packages/extension-inject/src/*"],
      "@polkadot/extension-ui": ["packages/extension-ui/src"],
      "@polkadot/extension-ui/*": ["packages/extension-ui/src/*"]
    },
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@polkadot/ts",
      "./node_modules/@types"
    ]
  }
}
